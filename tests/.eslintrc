{
    "baseConfig": false,
    "env": {
        "mocha": true
    },
    "globals": {
        "it": true,
        "describe": true,
        "after": true,
        "afterEach": true,
        "before": true,
        "beforeEach": true
    },
    "rules": {
        "import/no-extraneous-dependencies": [2, { "devDependencies": true, "optionalDependencies": false }],
        "max-nested-callbacks": 0,
        "max-statements": 0,
        "no-unused-expressions": 0,
        "global-require": 0,
        "no-magic-numbers": 0,
        "no-console": 0,
        "func-style": 0
    }
}
