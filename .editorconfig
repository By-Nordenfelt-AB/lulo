root = true

[*]
indent_style = space
indent_size = 4
# end_of_line = lf # let .gitattributes manage the conversion
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 180

[*.mk]
indent_style = tab
tab_width = 4

[.eslintrc]
indent_size = 4

[Makefile]
indent_style = tab
tab_width = 4

[package.json]
indent_size = 2

[*.jade]
indent_style = tab
tab_width = 4

[*.pug]
indent_style = tab
tab_width = 4
